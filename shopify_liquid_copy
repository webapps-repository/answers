    <!-- Technical upload -->
    <div class="field" id="technical-field">
      <label>Optional file upload (for diagrams, screenshots, etc.)</label>
      <input id="technicalFile" name="technicalFile" type="file">
    </div>

    <div id="personal-fields">
      <div class="field"><label>Email</label><input id="email" name="email" type="email"></div>
      <div class="field"><label>Full Name</label><input id="fullName" name="fullName"></div>
      <div class="field"><label>Date of Birth</label><input id="birthDate" name="birthDate" type="date"></div>
      <div class="field"><label>Time of Birth</label><input id="birthTime" name="birthTime" type="time"></div>

      <div class="field"><label>City</label><input id="birthCity" name="birthCity"></div>
      <div class="field"><label>State</label><input id="birthState" name="birthState"></div>
      <div class="field"><label>Country</label><input id="birthCountry" name="birthCountry"></div>

      <div class="field">
        <label>Upload a clear photo of your right palm (optional)</label>
        <input name="palmImage" type="file" accept="image/*">
      </div>
