<script src="https://www.google.com/recaptcha/api.js?onload=onLoadRecaptcha&render=explicit" async defer></script>

<script>
/* ============================================================
   API ENDPOINTS
============================================================ */
const API_SUMMARY = "https://answers-rust.vercel.app/api/spiritual-report";
const API_PDF     = "https://answers-rust.vercel.app/api/detailed-report";

/* ============================================================
   DOM refs
============================================================ */
const personalBox       = document.getElementById("isPersonal");
const personalFields    = document.getElementById("personal-fields");
const technicalField    = document.getElementById("technical-field");
const technicalFileInput= document.getElementById("technicalFile");
const questionEl        = document.getElementById("question");
const summaryEl         = document.getElementById("summary");
const summaryTextEl     = document.getElementById("summary-text");
const spinner           = document.getElementById("spinner");
const statusText        = document.getElementById("status-text");
const pdfBtn            = document.getElementById("pdf-btn");
const progressInner     = document.getElementById("progress-inner");

let recaptchaId = null;
let lastMode = null;

/* ============================================================
   RECAPTCHA
============================================================ */
function onLoadRecaptcha() {
  recaptchaId = grecaptcha.render("recaptcha-box", {
    sitekey: "6LdAOgYsAAAAAFgNlxLkahtIAbZc4XcIJt2hfLsj",
    size: "normal"
  });
}

/* ============================================================
   Reset UI
============================================================ */
function resetSummary() {
  summaryTextEl.textContent = "";
  summaryEl.style.display = "none";
  statusText.textContent = "";
}

questionEl.addEventListener("input", resetSummary);

/* ============================================================
   PERSONAL MODE SWITCH
============================================================ */
personalBox.addEventListener("change", () => {
  if (personalBox.checked) {
    personalFields.style.display = "block";
    technicalField.style.display = "none";
    pdfBtn.style.display = "none";
  } else {
    personalFields.style.display = "none";
    technicalField.style.display = "block";
    pdfBtn.style.display = "none";
  }
  resetSummary();
});

/* ============================================================
   PROGRESS BAR
============================================================ */
function animateProgress() {
  progressInner.style.width = "0%";
  setTimeout(() => progressInner.style.width = "40%", 100);
  setTimeout(() => progressInner.style.width = "75%", 600);
  setTimeout(() => progressInner.style.width = "100%", 1300);
}

/* ============================================================
   SUBMIT → GET SUMMARY ANSWER
============================================================ */
document.getElementById("main-form").addEventListener("submit", async (e) => {
  e.preventDefault();
  resetSummary();

  const token = grecaptcha.getResponse(recaptchaId);
  if (!token) {
    alert("Please complete reCAPTCHA.");
    return;
  }

  spinner.style.display = "block";
  statusText.textContent = "Processing...";
  animateProgress();

  const fd = new FormData();
  fd.append("question", questionEl.value.trim());
  fd.append("recaptchaToken", token);
  fd.append("isPersonal", personalBox.checked ? "true" : "false");

  if (!personalBox.checked && technicalFileInput?.files[0]) {
    fd.append("technicalFile", technicalFileInput.files[0]);
  }

  if (personalBox.checked) {
    fd.append("email", document.getElementById("email").value.trim());
    fd.append("fullName", document.getElementById("fullName").value.trim());
    fd.append("birthDate", document.getElementById("birthDate").value);
    fd.append("birthTime", document.getElementById("birthTime").value);

    const place = [
      document.getElementById("birthCity").value.trim(),
      document.getElementById("birthState").value.trim(),
      document.getElementById("birthCountry").value.trim()
    ].filter(Boolean).join(", ");

    fd.append("birthPlace", place);

    const palmFile = document.querySelector('input[name="palmImage"]').files[0];
    if (palmFile) fd.append("palmImage", palmFile);
  }

  let json;
  try {
    const raw = await fetch(API_SUMMARY, {
      method: "POST",
      mode: "cors",
      body: fd
    });

    json = await raw.json();
  } catch (err) {
    spinner.style.display = "none";
    alert("Server error: " + err.message);
    return;
  }

  spinner.style.display = "none";

  if (json.error) {
    alert("Error: " + json.error);
    return;
  }

  lastMode = personalBox.checked ? "personal" : "technical";

  summaryTextEl.textContent = json.shortAnswer || "(no answer returned)";
  summaryEl.style.display = "block";

  if (lastMode === "personal") {
    pdfBtn.style.display = "none";
    statusText.textContent = "Your full personal report has been emailed.";
    alert("✔ Your personal report has been emailed.");
  } else {
    pdfBtn.style.display = "block";
    statusText.textContent = "Short answer ready. Click below for full PDF.";
  }

  // reset CAPTCHA ONLY AFTER processing
  grecaptcha.reset(recaptchaId);
});

/* ============================================================
   PDF SEND (TECHNICAL ONLY)
============================================================ */
const modalBg = document.getElementById("modal-bg");

pdfBtn.addEventListener("click", () => {
  if (lastMode === "personal") {
    alert("Your personal full report was already emailed.");
    return;
  }

  const savedEmail = document.getElementById("email").value.trim();
  if (savedEmail) sendTechnicalPdf(savedEmail);
  else modalBg.style.display = "flex";
});

document.getElementById("modal-cancel").addEventListener("click", () => {
  modalBg.style.display = "none";
});

document.getElementById("modal-send").addEventListener("click", () => {
  const email = document.getElementById("modal-email").value.trim();
  if (!email) return alert("Enter your email");
  modalBg.style.display = "none";
  sendTechnicalPdf(email);
});

/* ============================================================
   TECHNICAL PDF SEND
============================================================ */
async function sendTechnicalPdf(email) {
  const token = grecaptcha.getResponse(recaptchaId);
  if (!token) {
    alert("Captcha expired. Please complete again.");
    grecaptcha.reset(recaptchaId);
    return;
  }

  const body = JSON.stringify({
    email,
    question: questionEl.value.trim(),
    recaptchaToken: token
  });

  statusText.textContent = "Sending PDF to " + email + "...";

  try {
    const raw = await fetch(API_PDF, {
      method: "POST",
      mode: "cors",
      headers: { "Content-Type": "application/json" },
      body
    });

    const json = await raw.json();

    if (!json.ok) {
      alert("Failed: " + (json.error || "Unknown error"));
      return;
    }

    alert("✔ Detailed technical report emailed!");
    statusText.textContent = "Report sent successfully.";

  } catch (err) {
    alert("Server error: " + err.message);
  }

  grecaptcha.reset(recaptchaId);
}
</script>

</body>
</html>
