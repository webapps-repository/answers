{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1.js"
    }
  ],
  "env": {
    "CHROMIUM_PATH": "/var/task/node_modules/@sparticuz/chromium/bin/chromium",
    "AWS_LAMBDA_JS_RUNTIME": "nodejs22.x"
  }
}
